<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-4 shadow p-4">
      <%= simple_form_for @pet do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :specie, collection: Pet::SPECIES %>
        <%= f.input :found_on, as: :date, html5: true %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
